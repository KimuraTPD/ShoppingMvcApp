@model IEnumerable<ShoppingMvcApp.Models.JoinTables>

@{
    ViewData["Title"] = "Index";
}

<h1>購入履歴</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.purchaseHistory.detailsId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product.image_url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product.productName) 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product.price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.purchaseHistory.count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.purchaseHistory.purchaseDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.purchaseHistory.detailsId)
            </td>
            <td>
                <a asp-controller="Products" asp-action="Details" asp-route-id="@item.product.productId">
                    <img src=@item.product.image_url width="80" height="80">
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product.productName)                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.purchaseHistory.count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.purchaseHistory.purchaseDate)
            </td>
            <td>
              <form asp-controller="Products" asp-action="AddCart" asp-route-id="@item.product.productId" method="POST">
                    <select name="count">
                        <option value=0 selected>0</option>
                        <option value=1>1</option>
                        <option value=2>2</option>
                        <option value=3>3</option>
                        <option value=4>4</option>
                        <option value=5>5</option>
                        <option value=6>6</option>
                        <option value=7>7</option>
                        <option value=8>8</option>
                        <option value=9>9</option>               
                    </select>
                    <input type="submit" value="カートに入れる" class="btn btn-primary">
                </Form>
            </td>
        </tr>
}
    </tbody>
</table>