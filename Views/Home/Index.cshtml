
@{
    ViewData["Title"] = "ショッピングサイト";
}

<div class="text-center">
    <h1 class="display-4">ログイン</h1>
     <form method="post" asp-controller="Home" asp-action="Form">
        <div class="form-group">
             <p></p>
            <label for="mail">ログインID(メールアドレス)</label>
            <input type="text" name="mail" id="mail" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="mail">パスワード</label>
            <input type="password" name="pass" id="pass" class="form-control" maxlength="10" pattern="[a-zA-Z0-9]+" title="パスワードは半角英数字で入力してください。" required />
        </div>
        <div class="form-group">
            <input type="submit" value = "ログイン" class="btn btn-primary"  />
           <!-- <p>@ViewData["object"]</p> -->

        </div>
    </form>

</div>
<div class="text-right">
<p><a  asp-controller="Users" asp-action="Create">新規会員登録はこちら</a></p>

</div>